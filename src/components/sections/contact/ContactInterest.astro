---
import { PanelLabel } from "@/components/ui/PanelLabel";
import { Panel } from "@/components/ui/Panel";
import { TimeDisplay } from "@/components/contact/TimeDisplay";

---
<div class="flex w-full gap-2 h-full">
	<PanelLabel label="Interest" client:only="react" index={0}/>
	<Panel client:only="react" panelClassName="h-full" index={1}>
		<div class="flex flex-col gap-2">
      <div class="flex flex-row justify-between gap-4">
        <p class="opacity-80">Availability:</p>
        <p class="text-moon-green font-medium">AVAILABLE</p>
      </div>
      <TimeDisplay client:only="react" />
      <div class="flex flex-row justify-between gap-4">
        <p class="opacity-80">Response Time:</p>
        <p class="text-moon-green font-medium">{`< 24 Hours`}</p>
      </div>
		</div>
	</Panel>
</div>
