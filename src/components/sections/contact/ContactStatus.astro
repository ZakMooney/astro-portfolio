---
import { PanelLabel } from "@/components/ui/PanelLabel";
import { Panel } from "@/components/ui/Panel";
import { TimeDisplay } from "@/components/contact/TimeDisplay";
import { TimezoneDisplay } from "@/components/contact/TimezoneDisplay";

---
<div class="flex w-full gap-2 h-full">
	<PanelLabel label="Status" client:only="react" index={0}/>
	<Panel client:only="react" panelClassName="h-full" index={1}>
		<div class="flex flex-col md:flex-row gap-2">
      <div class="flex flex-1 flex-col gap-2">

        <div class="flex flex-row justify-between gap-4">
          <p class="opacity-80">Availability:</p>
          <p class="text-moon-green font-medium">AVAILABLE</p>
        </div>

        <div class="flex lex-row justify-between gap-4">
          <p class="opacity-80">Local Time:</p>
          <p class="font-medium">
             <TimeDisplay client:only="react" />
          </p>
        </div>

      </div>

      <div class="hidden md:flex">
        <div
          class="h-full w-px self-stretch bg-gradient-to-tr from-transparent via-moon-blue to-transparent opacity-25"></div>
      </div> 

      <div class="flex flex-1 flex-col-reverse md:flex-col gap-2">

        <div class="flex flex-row justify-between gap-2">
          <p class="opacity-80">Response Time:</p>
          <p class="text-moon-blue font-medium">{`< 24 Hours`}</p>
        </div>

        <div class="flex flex-row justify-between gap-4">
          <p class="opacity-80">Time Zone:</p>
          <p class="font-medium">
            <TimezoneDisplay client:only="react" />
          </p>
        </div>
       
      </div>

		</div>
	</Panel>
</div>
